package org.suntao.easyorm.executor;

import java.util.List;

public interface Exceutor {
	/**
	 * 查询结果并返回实体类型列表
	 * <p>
	 * 通过JDBC查询,返回的ResultSet通过反射,转化成实体列表
	 * 
	 * @param type
	 *            实体类型
	 * @param sqlStr
	 *            SQL字符串
	 * @return 实体列表
	 */
	<T> List<T> selectList(T type, String sqlStr);

	<T> List<T> selectOne(T type, String sqlStr);

	Integer update(String sqlStr);

	Integer delete(String sqlStr);

	Integer insert(String sqlStr);
}
